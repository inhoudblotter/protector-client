{
  "name": "protector-client",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "tsx ./src/server/index.ts",
    "build": "rimraf dist && tsc -p tsconfig.json && npm run build:client && npm run build:server && npm run copy-files",
    "build:client": "vite build  --no-hmr --outDir dist/client --ssrManifest",
    "build:server": "vite build --ssr ./src/client/app/entry.server.tsx && vite build --ssr ./src/server/index.ts",
    "start": "cross-env NODE_ENV=production node ./dist/index.js",
    "copy-files": "copyfiles -u 2 \"dist/client/assets/*\" dist/public && rimraf dist/client/assets && copyfiles -u 2 \"dist/client/**/*\" dist && rimraf dist/client",
    "lint": "eslint ./src/** --ext .ts --ext .tsx"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "preact": "^10.16.0",
    "preact-async-route": "^2.2.1",
    "preact-render-to-string": "^6.2.2",
    "preact-router": "^4.1.2",
    "vite": "^4.4.5"
  },
  "devDependencies": {
    "@preact/preset-vite": "^2.5.0",
    "@types/compression": "^1.7.4",
    "@types/cookie-parser": "^1.4.6",
    "@types/express": "^4.17.20",
    "@types/node": "^20.11.19",
    "@types/yandex-maps": "^2.1.32",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.57.0",
    "eslint-config-preact": "^1.3.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^27.9.0",
    "jest": "^29.7.0",
    "rimraf": "^5.0.5",
    "tsx": "^3.14.0",
    "typescript": "^5.2.2"
  }
}
